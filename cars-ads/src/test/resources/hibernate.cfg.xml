<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property> <!-- BD Mane -->
        <property name="connection.driver_class">org.h2.Driver</property> <!-- DB Driver -->
        <property name="connection.username">sa</property> <!-- DB User -->
        <property name="connection.password"></property> <!-- DB Password -->

        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <property name="hibernate.show_sql">true</property>

        <!--        <mapping resource="cars/all-for-car.xml"/> -->
        <mapping class="ru.job4j.cars.BodytypeEntity"/>
        <mapping class="ru.job4j.cars.CarEntity"/>
        <mapping class="ru.job4j.cars.CityEntity"/>
        <mapping class="ru.job4j.cars.DriveunitEntity"/>
        <mapping class="ru.job4j.cars.EnginestypeEntity"/>
        <mapping class="ru.job4j.cars.FotoEntity"/>
        <mapping class="ru.job4j.cars.MarkEntity"/>
        <mapping class="ru.job4j.cars.ModelEntity"/>
        <mapping class="ru.job4j.cars.TransmissionEntity"/>
        <mapping class="ru.job4j.cars.UsersEntity"/>
        <mapping class="ru.job4j.cars.WheelEntity"/>

    </session-factory>
</hibernate-configuration>